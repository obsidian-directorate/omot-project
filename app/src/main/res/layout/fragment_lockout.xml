<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="24dp"
    android:orientation="vertical"
    tools:context=".ui.auth.LockoutFragment">

    <!-- Alert icon -->
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginBottom="32dp"
        android:src="@drawable/ic_lockout_alert"
        app:tint="@color/omot_red_alert" />

    <!-- Lockout header -->
    <TextView
        android:id="@+id/tv_lockout_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="@string/lockout_header"
        android:textAppearance="@style/TextAppearance.OMOT.Alert"
        android:textColor="@color/omot_red_alert" />

    <!-- Lockout message -->
    <TextView
        android:id="@+id/tv_lockout_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:gravity="center"
        android:lineSpacingExtra="8dp"
        android:text="@string/lockout_message"
        android:textAppearance="@style/TextAppearance.OMOT.Body.Large"
        android:textColor="@color/omot_text_primary" />

    <!-- Countdown timer -->
    <TextView
        android:id="@+id/tv_countdown_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:background="@drawable/countdown_background"
        android:gravity="center"
        android:padding="16dp"
        android:text="@string/countdown_timer_maximum"
        android:textAppearance="@style/TextAppearance.OMOT.Headline.Medium"
        android:textColor="@color/omot_text_primary"
        android:textStyle="bold" />

    <!-- Countdown label -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:text="@string/countdown_timer_label"
        android:textAppearance="@style/TextAppearance.OMOT.Label.Medium"
        android:textColor="@color/omot_text_secondary" />

    <!-- Emergency contact card -->
    <com.google.android.material.card.MaterialCardView
        style="@style/CardView.OMOT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/emergency_contact_label"
                android:textAppearance="@style/TextAppearance.OMOT.Label.Medium"
                android:textColor="@color/omot_text_secondary" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/security_desk"
                android:textAppearance="@style/TextAppearance.OMOT.Body.Medium"
                android:textColor="@color/omot_text_primary" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/security_email_address"
                android:textAppearance="@style/TextAppearance.OMOT.Body.Medium"
                android:textColor="@color/omot_blue_light" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Panic mode warning -->
    <TextView
        android:id="@+id/tv_panic_warning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/omot_red_emergency"
        android:gravity="center"
        android:padding="12dp"
        android:text="@string/panic_mode_label"
        android:textAppearance="@style/TextAppearance.OMOT.Label.Medium"
        android:textColor="@color/omot_text_primary"
        android:textStyle="bold"
        android:visibility="gone" />

</LinearLayout>