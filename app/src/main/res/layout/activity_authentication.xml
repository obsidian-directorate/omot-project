<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/auth_background"
    android:padding="24dp"
    tools:context=".ui.auth.AuthenticationActivity">

    <!-- Terminal header -->
    <TextView
        android:id="@+id/tv_terminal_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:text="@string/auth_required_header"
        android:textAppearance="@style/TextAppearance.OMOT.Headline.Medium"
        android:textColor="@color/omot_blue_light"
        android:textStyle="bold"
        android:textAlignment="center" />

    <!-- Scanning line animation -->
    <View
        android:id="@+id/view_scan_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/tv_terminal_header"
        android:background="@drawable/scan_line_gradient"
        android:visibility="invisible" />

    <!-- Fragment container -->
    <FrameLayout
        android:id="@+id/frame_auth_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_terminal_header"
        android:layout_above="@id/layout_status_group"
        android:layout_marginTop="40dp" />

    <!-- Status indicator -->
    <LinearLayout
        android:id="@+id/layout_status_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/tv_security_footer"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <View
            android:id="@+id/view_status_indicator"
            android:layout_width="4dp"
            android:layout_height="20dp"
            android:layout_marginEnd="12dp"
            android:background="@color/omot_green_success" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/access_granted"
            android:textAppearance="@style/TextAppearance.OMOT.Body.Medium"
            android:textColor="@color/omot_text_primary" />
    </LinearLayout>

    <!-- Security footer -->
    <TextView
        android:id="@+id/tv_security_footer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:text="@string/security_footer"
        android:textAppearance="@style/TextAppearance.OMOT.Body.Small"
        android:textColor="@color/omot_text_secondary" />

</RelativeLayout>