<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    tools:context=".ui.auth.ForgotPassFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:text="@string/forgot_pass_header"
            android:textAppearance="@style/TextAppearance.OMOT.Headline.Small"
            android:textColor="@color/omot_blue_light" />

        <!-- Description -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:text="@string/forgot_pass_desc"
            android:textAppearance="@style/TextAppearance.OMOT.Body.Medium"
            android:textColor="@color/omot_text_secondary" />

        <!-- Codename input -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.OMOT.TextInput"
            android:id="@+id/edt_layout_codename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="@string/your_codename_hint">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_codename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionNext"
                android:inputType="textCapWords"
                android:maxLines="1"
                android:textAppearance="@style/TextAppearance.OMOT.Body.Medium" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Security question display -->
        <TextView
            android:id="@+id/tv_security_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:padding="12dp"
            android:background="@color/omot_surface_variant"
            android:text="@string/security_question_label"
            android:textAppearance="@style/TextAppearance.OMOT.Body.Medium"
            android:visibility="gone" />

        <!-- Security answer input -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.OMOT.TextInput"
            android:id="@+id/edt_layout_security_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:hint="@string/security_answer_hint">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_security_answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionDone"
                android:inputType="textCapWords"
                android:maxLines="1"
                android:textAppearance="@style/TextAppearance.OMOT.Body.Medium" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Verify button -->
        <com.google.android.material.button.MaterialButton
            style="@style/Button.OMOT"
            android:id="@+id/btn_verify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/button_verify_identity" />

        <!-- Verify progress -->
        <ProgressBar
            android:id="@+id/progress_verify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:indeterminateTint="@color/omot_blue_light"
            android:visibility="gone" />

        <!-- New password section (initially hidden) -->
        <LinearLayout
            android:id="@+id/layout_new_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="@string/new_password_section"
                android:textAppearance="@style/TextAppearance.OMOT.Title.Small"
                android:textAlignment="center"
                android:textColor="@color/omot_green_success" />

            <!-- New cipher key input -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.OMOT.TextInput"
                android:id="@+id/edt_layout_new_cipher_key"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:hint="@string/new_cipher_key_hint"
                app:passwordToggleEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_new_cipher_key"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:textAppearance="@style/TextAppearance.OMOT.Body.Medium" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Confirm cipher key input -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.OMOT.TextInput"
                android:id="@+id/edt_layout_confirm_cipher_key"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:hint="@string/confirm_cipher_key_hint"
                app:passwordToggleEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_confirm_cipher_key"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:textAppearance="@style/TextAppearance.OMOT.Body.Medium" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Reset button -->
            <com.google.android.material.button.MaterialButton
                style="@style/Button.OMOT"
                android:id="@+id/btn_reset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/button_reset_password" />

            <!-- Reset progress -->
            <ProgressBar
                android:id="@+id/progress_reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:indeterminateTint="@color/omot_green_success"
                android:visibility="gone" />
        </LinearLayout>

        <!-- Status group -->
        <LinearLayout
            android:id="@+id/layout_status_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <View
                android:layout_width="4dp"
                android:layout_height="20dp"
                android:layout_marginEnd="12dp"
                android:background="@color/omot_red_alert" />

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/verification_failed"
                android:textAppearance="@style/TextAppearance.OMOT.Body.Medium"
                android:textColor="@color/omot_red_alert" />
        </LinearLayout>

        <!-- Cancel button -->
        <com.google.android.material.button.MaterialButton
            style="@style/Button.OMOT.Text"
            android:id="@+id/btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_cancel_recovery" />
    </LinearLayout>

</ScrollView>