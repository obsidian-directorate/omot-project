<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ui.main.MainActivity">

    <!-- Main content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Toolbar -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/omot_obsidian_dark"
            android:theme="@style/Theme.OMOT"
            app:menu="@menu/toolbar_menu"
            app:navigationIcon="@drawable/ic_menu"
            app:title="@string/title_omot_terminal"
            app:titleTextColor="@color/omot_text_primary" />

        <!-- Clearance badge -->
        <TextView
            android:id="@+id/tv_clearance_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="8dp"
            android:background="@drawable/badge_background_beta"
            android:paddingHorizontal="12dp"
            android:paddingVertical="4dp"
            android:text="@string/clearance_beta"
            android:textAppearance="@style/TextAppearance.OMOT.Label.Small"
            android:textColor="@color/omot_text_primary"
            android:textStyle="bold"
            android:visibility="gone" />

        <!-- Fragment container -->
        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/omot_background" />

        <!-- Security footer -->
        <TextView
            android:id="@+id/tv_security_footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/omot_surface_variant"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/security_footer_2"
            android:textAppearance="@style/TextAppearance.OMOT.Label.Small"
            android:textColor="@color/omot_text_secondary" />
    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/omot_obsidian_dark"
        app:headerLayout="@layout/nav_header_main"
        app:menu="@menu/nav_menu" />

</androidx.drawerlayout.widget.DrawerLayout>