<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Button styles -->
    <style name="Button.OMOT" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/omot_blue_primary</item>
        <item name="android:textColor">@color/omot_text_primary</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="Button.OMOT.Outline" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/omot_blue_light</item>
        <item name="strokeColor">@color/omot_blue_primary</item>
        <item name="strokeWidth">1.5dp</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="Button.OMOT.Text" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/omot_blue_light</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="rippleColor">@color/omot_blue_primary</item>
    </style>

    <!-- Text input styles -->
    <style name="Widget.OMOT.TextInput" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/omot_blue_primary</item>
        <item name="android:strokeColor">@color/omot_blue_primary</item>
        <item name="hintTextColor">@color/omot_text_secondary</item>
        <item name="android:textColorHint">@color/omot_text_secondary</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
    </style>

    <!-- Card styles -->
    <style name="CardView.OMOT" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/omot_surface_variant</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="strokeColor">@color/omot_outline</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <!-- Chip styles -->
    <style name="Chip.OMOT" parent="Widget.Material3.Chip.Assist">
        <item name="chipBackgroundColor">@color/omot_blue_surface</item>
        <item name="chipStrokeColor">@color/omot_blue_primary</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="cornerRadius">16dp</item>
    </style>

    <style name="Widget.OMOT.ClearanceBadge" parent="Widget.Material3.Chip.Assist">
        <item name="android:textAppearance">@style/TextAppearance.OMOT.Label.Medium</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">24dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Alert dialog styles -->
    <style name="Theme.OMOT.Dialog" parent="Theme.Material3.Dark.Dialog">
        <item name="android:windowBackground">@drawable/dialog_background</item>
        <item name="buttonBarPositiveButtonStyle">@style/DialogButton.Positive</item>
        <item name="buttonBarNegativeButtonStyle">@style/DialogButton.Negative</item>
        <item name="colorPrimary">@color/omot_blue_light</item>
    </style>

    <!-- Dialog button styles -->
    <style name="DialogButton.Positive" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/omot_blue_light</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="DialogButton.Negative" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/omot_text_secondary</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <!-- Clearance badge styles -->
    <style name="Badge.Clearance.BETA" parent="Widget.OMOT.ClearanceBadge">
        <item name="android:background">@color/clearance_beta</item>
        <item name="android:textColor">@color/omot_text_primary</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">4dp</item>
    </style>

    <style name="Badge.Clearance.ALPHA" parent="Widget.OMOT.ClearanceBadge">
        <item name="android:background">@color/clearance_alpha</item>
        <item name="android:textColor">@color/omot_text_primary</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">4dp</item>
    </style>

    <style name="Badge.Clearance.OMEGA" parent="Widget.OMOT.ClearanceBadge">
        <item name="android:background">@color/clearance_omega</item>
        <item name="android:textColor">@color/omot_text_primary</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">4dp</item>
    </style>

    <style name="Badge.Clearance.SHADOW" parent="Widget.OMOT.ClearanceBadge">
        <item name="android:background">@color/clearance_shadow</item>
        <item name="android:textColor">@color/omot_text_primary</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">4dp</item>
    </style>
</resources>